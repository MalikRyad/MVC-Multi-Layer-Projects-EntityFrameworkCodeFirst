@model IEnumerable<DepartmentOsitel>
@{
    ViewData["Title"] = "Tasks";
}

<div class="row">
    <div class="col-lg-12">
        @Html.ActionLink("Create New Task", "Create", "Department", null, new { @class="btn btn-success" })
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <td>Department Name</td>
                    <td>Is Department Completed?</td>
                    <td>Department Created</td>
                    <td></td>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count() > 0)
                {
                    @foreach (var department in Model)
                    {
                        <tr>
                            <td>@department.DepartmentName</td>
                            <td>@department.IsCompleted</td>
                            <td>@department.DateCreated.ToShortDateString()</td>
                            <td class="text-center">@Html.ActionLink("Edit", "Edit", "Department", new { Id = department.Id }) | @Html.ActionLink("Delete", "Delete", "Department", new { Id = department.Id }) </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="4" class="text-center">
                            No Records Found. 
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

